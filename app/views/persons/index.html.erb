<h1>Listing Persons</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Email</th>
    <th>Address</th>
    <th colspan="2"></th>
  </tr>
 
  <% @persons.each do |person| %>
    <tr>
      <td><%= person.Name %></td>
      <td><%= person.Age %></td>
      <td><%= person.Gender %></td>
      <td><%= person.Email %></td>
      <td><%= person.Address %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person_path(person),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>